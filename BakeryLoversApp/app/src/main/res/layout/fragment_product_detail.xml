<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    tools:context="com.nanodegree.gaby.bakerylovers.fragments.ProductDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_margin="@dimen/small_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:useDefaultMargins="true"
                android:columnCount="2"
                android:layout_margin="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@+id/product_detail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/no_image" />
                <TextView
                    style="@style/BodyText.Gray"
                    android:id="@+id/product_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:text="Delightfully sweet with the perfect amount of tartness, this creamy bright key lime pie recipe is indulgent comfort in every bite."/>
                <TextView
                    style="@style/BodyText.DarkGray"
                    android:id="@+id/label_product_detail_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_calories" />
                <TextView
                    style="@style/BodyText.Gray"
                    android:id="@+id/product_detail_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/small_margin"
                    android:text="500" />
                <TextView
                    style="@style/BodyText.DarkGray"
                    android:id="@+id/label_product_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_price" />
                <TextView
                    style="@style/BodyText.Gray"
                    android:id="@+id/product_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/small_margin"
                    android:text="5.000" />
            </GridLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>
