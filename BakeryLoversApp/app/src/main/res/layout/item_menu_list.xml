<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/small_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Title.Gray"
            android:id="@+id/item_product_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/current_order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:src="@drawable/ic_add_shopping_cart"
            android:contentDescription="@string/product_add_to_cart"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
        <TextView
            style="@style/Title.Gray"
            android:id="@+id/item_product_name_text"
            android:paddingStart="@dimen/small_margin"
            android:paddingEnd="@dimen/small_margin"
            android:textAlignment="viewStart"
            android:layout_above="@+id/item_product_price_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/small_margin"
            android:contentDescription="@string/title_product_image"
            android:layout_above="@+id/item_product_name_text"
            android:scaleType="fitCenter"
            android:src="@drawable/no_image" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
