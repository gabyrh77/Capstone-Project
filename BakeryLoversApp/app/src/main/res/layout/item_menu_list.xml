<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/small_margin">
            <TextView
                style="@style/Title.Gray"
                android:id="@+id/item_product_name_text"
                android:layout_margin="@dimen/small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moka Torte"/>
            <ImageView
                android:id="@+id/item_product_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/moka_torte"
                />
            <TextView
                style="@style/Title.Gray"
                android:id="@+id/item_product_price_text"
                android:layout_margin="@dimen/small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.000"
                android:layout_gravity="bottom|start"/>

            <ImageButton
                android:id="@+id/current_order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart"
                android:padding="@dimen/small_margin"
                android:layout_margin="@dimen/small_margin"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|end" />

    </android.support.v7.widget.CardView>


</LinearLayout>
