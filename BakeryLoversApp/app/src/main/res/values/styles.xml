<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bgLight</item>
        <item name="android:textColorPrimaryInverse">@color/textPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme">
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="android:Widget" tools:override="true">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Large" />

    <style name="BodyText" parent="TextAppearance.AppCompat.Medium" />

    <style name="Title.Gray" parent="Title">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Title.EmptyText" parent="Title">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Headline">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">45sp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Title.DarkGray" parent="Title">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="BodyText.DarkGray" parent="BodyText">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Label" parent="TextAppearance.AppCompat.Small" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label.DarkGray" parent="Label">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="BodyText.Gray" parent="BodyText">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Title.White" parent="Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SeeMoreButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
        <item name="android:drawableStart">@drawable/ic_keyboard_arrow_down</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.White.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.White.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
